<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelezionaMuseo">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            app:titleTextColor="@color/white"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/barra_seleziona_museo" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".10"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/circle"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/myImageView"
                android:layout_alignTop="@+id/myImageView"
                android:layout_alignEnd="@+id/myImageView"
                android:layout_alignBottom="@+id/myImageView"
                android:gravity="center"
                android:text="1"
                android:textColor="#000"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:src="@drawable/line_for_step_bar"
            tools:ignore="ContentDescription" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".10"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/myImageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:src="@drawable/circle"
                tools:ignore="ContentDescription,ObsoleteLayoutParam" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/myImageView2"
                android:layout_alignTop="@+id/myImageView2"
                android:layout_alignEnd="@+id/myImageView2"
                android:layout_alignBottom="@+id/myImageView2"
                android:gravity="center"
                android:text="2"
                android:textColor="#000"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:src="@drawable/line_for_step_bar"
            tools:ignore="ContentDescription" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".10"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/myImageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:src="@drawable/circle"
                tools:ignore="ContentDescription,ObsoleteLayoutParam" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/myImageView3"
                android:layout_alignTop="@+id/myImageView3"
                android:layout_alignEnd="@+id/myImageView3"
                android:layout_alignBottom="@+id/myImageView3"
                android:gravity="center"
                android:text="3"
                android:textColor="#000"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:src="@drawable/line_for_step_bar"
            tools:ignore="ContentDescription" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".10"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/myImageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:src="@drawable/circle"
                tools:ignore="ContentDescription,ObsoleteLayoutParam"
                android:contentDescription="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/myImageView4"
                android:layout_alignTop="@+id/myImageView4"
                android:layout_alignEnd="@+id/myImageView4"
                android:layout_alignBottom="@+id/myImageView4"
                android:gravity="center"
                android:text="4"
                android:textColor="#000"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:src="@drawable/line_for_step_bar"
            android:contentDescription=""
            tools:ignore="ContentDescription" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".10"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/myImageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:src="@drawable/circle"
                tools:ignore="ContentDescription,ObsoleteLayoutParam"
                android:contentDescription="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/myImageView5"
                android:layout_alignTop="@+id/myImageView5"
                android:layout_alignEnd="@+id/myImageView5"
                android:layout_alignBottom="@+id/myImageView5"
                android:gravity="center"
                android:text="5"
                android:textColor="#000"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="324dp"
        android:layout_height="56dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="67dp"
        android:text="@string/seleziona_museo"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/auto_complete_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.761"
        tools:ignore="NotSibling">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Luogo culturale"
        android:textSize="27sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo"
        app:errorTextColor="@color/design_default_color_error"
        app:endIconMode="clear_text"
        app:helperText="@string/campo_richiesto"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        tools:layout_editor_absoluteX="16dp">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:ignore="LabelFor" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bottoneVai_a_sceltaTipoPercorso"
        android:layout_width="277dp"
        android:layout_height="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="16dp"
        android:text="@string/avanti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="NotSibling" />
</androidx.constraintlayout.widget.ConstraintLayout>